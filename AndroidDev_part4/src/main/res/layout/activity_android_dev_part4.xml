<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AEFFFFFF"
    tools:context=".AndroidDev_part4">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/materialdesign"
            android:textColor="@color/black"
            android:textSize="24sp"

            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonListView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:backgroundTint="#000000"
            android:onClick="clickListView"
            android:layout_marginBottom="15dp"
            android:text="@string/list_view"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/buttonListViewColor"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/buttonListView"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#000000"
            android:onClick="clickListViewColor"
            android:text="@string/list_view_color"
            android:textAllCaps="false"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/buttonRecycle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/buttonListViewColor"
            android:backgroundTint="#000000"
            android:onClick="clickRecycleView"
            android:text="@string/recycleview"
            android:textAllCaps="false"
            tools:layout_editor_absoluteX="161dp" />

    </RelativeLayout>


</RelativeLayout>