<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#24667A"
    tools:context=".MainActivity_module_6">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewBell"
        android:layout_width="337dp"
        android:layout_height="570dp"
        android:layout_marginBottom="188dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bell"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:backgroundTint="#039BE5"
        android:text="Start"
        android:onClick="startTimer"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBell"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/imageViewBell"
        app:layout_constraintTop_toTopOf="@+id/imageViewBell" />

    <SeekBar
        android:id="@+id/seekBarTimer"
        android:layout_width="295dp"
        android:layout_height="35dp"
        android:layout_marginBottom="72dp"
        android:progressBackgroundTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/textViewTimer"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBell"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/imageViewBell" />

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="0:00"
        android:textColor="#231B98"
        android:textSize="44dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBell"
        app:layout_constraintStart_toStartOf="@+id/imageViewBell"
        app:layout_constraintTop_toTopOf="@+id/imageViewBell" />


</androidx.constraintlayout.widget.ConstraintLayout>